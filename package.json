  "dependencies": {
    "@types/ws": "^8.5.5",
    "ws": "^8.14.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts,md,json}": "prettier --write --ignore-unknown --config ./.prettierrc"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "dist"
  ]
