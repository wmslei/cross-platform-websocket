    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.{js,ts,md,json}' --config ./.prettierrc",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.14",
    "@rollup/plugin-babel": "^6.0.3",
